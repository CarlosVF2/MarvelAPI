<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageViewCharacter"
        android:layout_width="@dimen/size_imageview_list"
        android:layout_height="@dimen/size_imageview_list"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:src="@android:drawable/ic_delete" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewCharacter"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            tools:text="Nombre de un character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewDescription"
            tools:text="Descripcion de un character mÃ¡asdasdasdasds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/textViewModified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            tools:text="23/01/32-22:45"
            android:textAppearance="?attr/textAppearanceListItem" />


    </LinearLayout>
</RelativeLayout>